@{
    ViewBag.Title = "Controls";
}

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Timer/Helper.js"></script>

    <script src="~/Scripts/jquery.timer.js"></script>

    <!--SignalR script to update the countdown timer and send messages.-->
    <script src="~/Scripts/Timer/Controls.js"></script>
}

@Html.Partial("_Controls")
